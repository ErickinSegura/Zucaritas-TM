@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@*Redirect a UserInfo*@
@*<meta http-equiv="Refresh" content="0; url='https://localhost:7026/UserInfo'" />*@
 <div style="height: 100vh">
        <div class="row">
            <div class="col-md-5 p-0 d-flex">
                <img src="~/images/awaq.png" alt="img" class="mainImage" style="background-color: #202714;">
            </div>
            <div class="col-md-7 p-5 bgGreen">
                <h1 class="display-5 p-5" style="color: white;"><strong class="text-uppercase">Log In</strong></h1>
                <div class="p-5">
                    <form method="post">
                        <div class="form-group">
                            <label for="usuario"></label>
                            <input name="usuario" type="text" class="form-control mb-5 pt-4 pb-4 inputClass" aria-describedby="emailHelp" placeholder="Usuario"
                                   style="border: 1px solid #ccc;
                           background-color: rgba(0, 0, 0, 0);
                           color: white;">
                        </div>
                        <div class="form-group">
                            <label for="contraseña"></label>
                            <input name="contraseña" type="text" class="form-control mb-5 pt-4 pb-4 inputClass" placeholder="Contraseña"
                                   style="border: 1px solid #ccc; background-color: rgba(0, 0, 0, 0);
                          color: white;">
                           
                        </div>
                        <div class="form-check">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-secondary btn-lg mt-5 p-3 col-md-5 bg-white text-black">Enviar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>



 </div>
       