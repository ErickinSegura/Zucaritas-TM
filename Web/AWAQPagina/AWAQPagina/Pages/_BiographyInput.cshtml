@* _BiographyInput.cshtml *@
@using Microsoft.AspNetCore.Mvc.Rendering
@model AWAQPagina.Pages.UserInfoModel

@{
    // Set the form action to the desired handler in your UserInfoModel.cshtml.cs file
    var formAction = "/UserInfo/SaveBiography";
}

<form method="post" action="@formAction">
    <div class="modal fade" id="biographyModal" tabindex="-1" aria-labelledby="biographyModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="biographyModalLabel">Edit Biography</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <textarea id="biographyTextarea" class="form-control" name="biography" rows="5" placeholder="Enter your biography"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
