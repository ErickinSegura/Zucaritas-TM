<div class="centerClass container-fluid" style="padding:32px; overflow:scroll;">
    @foreach (var especie in Model.especies)
        {
            <div class="d-flex flex-row">
                <div>@especie.nombre_Especie</div>
                <div>@especie.nombre_cientifico</div>
                <div>@especie.descripcion</div>
                <div>
                    <img src="@especie.img_web"/>
                </div>
            </div>
        }
</div>